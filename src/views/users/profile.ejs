<div class="container">
	<h1>Profile</h1>
	<br>
	<% if (forms){ %>
		<%
			var linkEdit   = '/users/edit/' + forms.id;
			var linkDelete = '/users/delete/' + forms.id;
		%>
		<script src="/js/users/users.js"></script>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%- include('../element/flash/default') %>
				<form action="" method="POST">
					<div class="form-group">
						<label>Username<span class="required">*</span></label>
						<input type="text" class="form-control" placeholder="Username" name="user_name" value="<%= forms.user_name %>">
					</div>
					
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label>First Name<span class="required">*</span></label>
								<input type="text" class="form-control" placeholder="First Name" name="first_name" value="<%= forms.first_name %>">
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label>Last Name<span class="required">*</span></label>
								<input type="text" class="form-control" placeholder="Last Name" name="last_name" value="<%= forms.last_name %>">
							</div>
						</div>
					</div>

					<div class="form-group">
						<label>Email<span class="required">*</span></label>
						<input type="email" class="form-control" placeholder="Email" name="email" value="<%= forms.email %>">
					</div>

					<div class="form-group">
						<label>Phone<span class="required">*</span></label>
						<input type="phone" class="form-control" placeholder="Phone" name="phone" value="<%= forms.phone %>">
					</div>

					<div class="form-group">
						<label>Role<span class="required">*</span></label>
						<select name="role" class="form-control">
							<option value="1" <%= forms.role == 1 ? 'selected' : '' %>>Admin</option>
							<option value="2" <%= forms.role == 2 ? 'selected' : '' %>>Normal</option>
						</select>
					</div>

					<div class="row">
						<div class="col-xs-6"><button type="submit" class="btn btn-primary btn-block">Update User</button></div>
						<div class="col-xs-6"><a href="#" class="btn btn-danger btn-block" data-toggle="modal" data-target="#change_password">Change Password</a></div>
					</div>
				</form>
			</div>
		</div>

		<%- include('./changePassword') %>

	<% } else { %>
		<%- include('../element/flash/default') %>
		<%- include('../element/block/no-item-mgs') %>
	<% } %>
	<br>
</div>