<div class="container">
	<h1>
		Chi tiết
		<a href="/users/index" class="btn btn-primary btn-sm">List Users</a>
	</h1>
	<br>
	<% if (user){ %>
		<%
			var linkEdit   = '/users/edit/' + user.id;
			var linkDelete = '/users/delete/' + user.id;
		%>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="row">
					<div class="col-xs-12"><%- include('../element/flash/default') %></div>
				</div>
				<div class="row">
					<div class="col-xs-3"><strong>User ID</strong></div>
					<div class="col-xs-9"><%= user.id %></div>
				</div>
				<div class="row">
					<div class="col-xs-3"><strong>UserName</strong></div>
					<div class="col-xs-9"><%= user.user_name %></div>
				</div>
				<div class="row">
					<div class="col-xs-3"><strong>First Name</strong></div>
					<div class="col-xs-9"><%= user.first_name %></div>
				</div>
				<div class="row">
					<div class="col-xs-3"><strong>Last Name</strong></div>
					<div class="col-xs-9"><%= user.last_name %></div>
				</div>
				<div class="row">
					<div class="col-xs-3"><strong>Email</strong></div>
					<div class="col-xs-9"><%= user.email %></div>
				</div>
				<div class="row">
					<div class="col-xs-3"><strong>Phone</strong></div>
					<div class="col-xs-9"><%= user.phone %></div>
				</div>
				<div class="row">
					<div class="col-xs-3"><strong>Role</strong></div>
					<div class="col-xs-9"><%= user.role_name %></div>
				</div>
				<div class="row">
					<div class="col-xs-3"><strong>Created</strong></div>
					<div class="col-xs-9"><%= user.created %></div>
				</div>
				<br>
				<div class="text-center">
					<a href="<%= linkEdit %>" class="btn btn-primary btn-md">
						<i class="fa fa-pencil" aria-hidden="true"></i> Modify
					</a>
					<a href="<%= linkDelete %>" class="btn btn-danger btn-md" onclick="if(!confirm('Bạn có chắc chắn muốn xóa?')) { return false; }">
						<i class="fa fa-times" aria-hidden="true"></i> Delete
					</a>
				</div>
			</div>
		</div>
	<% } else { %>
		<%- include('../element/flash/default') %>
		<%- include('../element/block/no-item-mgs') %>
	<% } %>
	<br>
</div>